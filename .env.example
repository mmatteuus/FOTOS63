# Fotos63 - Environment Variables Example
# Copy this file to .env and fill in your actual values

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Stripe Configuration
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# PagSeguro Configuration
PAGSEGURO_EMAIL=your-pagseguro-email@example.com
PAGSEGURO_TOKEN=your-pagseguro-token
PAGSEGURO_APP_ID=your-app-id
PAGSEGURO_APP_KEY=your-app-key
PAGSEGURO_ENVIRONMENT=sandbox # or production

# Instagram Integration
INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret
INSTAGRAM_REDIRECT_URI=https://your-domain.com/auth/instagram/callback

# WhatsApp Business API
WHATSAPP_BUSINESS_PHONE=5563999999999
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_VERIFY_TOKEN=your-verify-token

# Google Analytics
GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Application Settings
APP_NAME=Fotos63
APP_URL=https://fotos63.com.br
APP_ENV=development # development, staging, production
APP_DEBUG=true

# File Upload Settings
MAX_FILE_SIZE=10485760 # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
UPLOAD_PATH=/uploads

# Security
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key
CORS_ORIGIN=https://fotos63.com.br

# Database (if using external PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/fotos63

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379

# CDN Configuration
CDN_URL=https://cdn.fotos63.com.br
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_BUCKET=fotos63-storage

# Monitoring and Logging
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW=15 # minutes
RATE_LIMIT_MAX_REQUESTS=100

# Backup Configuration
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE=s3 # local, s3, gcs

